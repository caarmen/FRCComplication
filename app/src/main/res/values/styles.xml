<resources>

    <style name="about_link_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableStart">@drawable/ic_about_link</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="CustomAlertDialogTheme" parent="@android:style/Theme.DeviceDefault.Dialog.Alert">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>
    <!-- parent @style/AlertDialog.DeviceDefault is private -->
    <style name="CustomAlertDialogStyle">
        <item name="listLayout">@layout/copy_select_dialog</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:alertDialogTheme">@style/CustomAlertDialogTheme</item>
    </style>
</resources>
